{
  "name": "@nasmcps/qbit-mcp",
  "version": "0.1.3",
  "description": "A Model Context Protocol (MCP) server for controlling qBittorrent via Claude and other MCP clients",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "qbit-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "USAGE.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "qbittorrent",
    "torrent",
    "client",
    "claude",
    "ai"
  ],
  "author": "fengwei-dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fengwei-dev/qbit-mcp.git"
  },
  "homepage": "https://github.com/fengwei-dev/qbit-mcp#readme",
  "bugs": {
    "url": "https://github.com/fengwei-dev/qbit-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@ctrl/qbittorrent": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
